<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/video_1"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/iv_video_background1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/video_background"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/iv_video_play1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_play"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/video_2"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/iv_video_background2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/video_background"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/iv_video_play2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_play"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/video_3"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:visibility="gone"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/iv_video_background3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/video_background"
            android:contentDescription="@string/app_name"/>

        <ImageView
            android:id="@+id/iv_video_play3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_play"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>
</LinearLayout>